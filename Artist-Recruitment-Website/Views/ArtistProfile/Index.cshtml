@model IEnumerable<Models.ArtistProfile>
@{
    ViewData["Title"] = "Artist Profiles";
}
<style>
    body {
        background: #18181b;
        font-family: 'Poppins', Arial, sans-serif;
    }
    .container {
        max-width: 1000px;
        margin: 40px auto;
        background: #23232b;
        border-radius: 32px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.25);
        padding: 40px 32px;
    }
    .header {
        color: #fff;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 32px;
        text-align: center;
    }
    .artist-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 32px;
    }
    .artist-card {
        background: linear-gradient(135deg, #fcb6e0 0%, #b48cf2 100%);
        border-radius: 24px;
        padding: 24px;
        color: #23232b;
        box-shadow: 0 4px 16px rgba(0,0,0,0.10);
        display: flex;
        flex-direction: column;
        align-items: center;
        transition: transform 0.2s;
    }
    .artist-card:hover {
        transform: translateY(-6px) scale(1.03);
    }
    .artist-img {
        width: 90px;
        height: 90px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 16px;
        border: 3px solid #fff;
        background: #fff;
    }
    .artist-name {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 8px;
    }
    .artist-bio {
        font-size: 1rem;
        margin-bottom: 12px;
        color: #444;
        text-align: center;
    }
    .artist-location {
        font-size: 0.95rem;
        color: #6d6d6d;
        margin-bottom: 12px;
    }
    .details-link {
        background: #a084ee;
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 8px 20px;
        font-weight: 600;
        text-decoration: none;
        transition: background 0.2s;
        margin-top: 8px;
        box-shadow: 0 2px 8px rgba(160,132,238,0.15);
    }
    .details-link:hover {
        background: #fcb6e0;
        color: #23232b;
    }
    .add-btn {
        display: block;
        margin: 0 auto 32px auto;
        background: #fcb6e0;
        color: #23232b;
        border: none;
        border-radius: 8px;
        padding: 10px 32px;
        font-weight: 700;
        font-size: 1.1rem;
        text-decoration: none;
        transition: background 0.2s;
        box-shadow: 0 2px 8px rgba(252,182,224,0.15);
    }
    .add-btn:hover {
        background: #a084ee;
        color: #fff;
    }
</style>
<div class="container">
    <div class="header">Artist Profiles</div>
    <form asp-controller="ArtistProfile" asp-action="Index" method="get" style="margin-bottom:32px; text-align:center;">
        <input type="text" name="search" placeholder="Search by full name..." value="@ViewBag.Search" style="padding:8px 16px; border-radius:8px; border:1px solid #ccc; width:250px; font-size:1rem; margin-right:8px;" />
        <button type="submit" class="add-btn" style="display:inline-block; margin:0;">Search</button>
    </form>
    <div class="artist-list">
        @foreach (var artist in Model)
        {
            <div class="artist-card">
                <img class="artist-img" src="@artist.ProfileImage" alt="Profile Image" onerror="this.src='/images/default-profile.png'" />
                <div class="artist-name">@artist.User.FullName</div>
                <div class="artist-bio">@artist.Bio</div>
                <div class="artist-location">@artist.Location</div>
                <a class="details-link" asp-action="Details" asp-route-id="@artist.ArtistProfileId">View Details</a>
            </div>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}