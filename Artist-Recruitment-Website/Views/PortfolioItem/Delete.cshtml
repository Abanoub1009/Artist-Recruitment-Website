@using Models
@model PortfolioItem

@{
    ViewData["Title"] = "Delete Artwork";
    var currentUserArtistProfileId = User.FindFirst("ArtistProfile")?.Value;
    var isOwner = currentUserArtistProfileId != null && Model.ArtistProfileId.ToString() == currentUserArtistProfileId;
}

<link rel="stylesheet" href="/css/portfolio-item.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
@if(isOwner){
<div class="portfolio-form-container">
    <div class="form-header">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn-back">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="delete-warning">
        <i class="fas fa-exclamation-triangle"></i>
        <p>Are you sure you want to delete this artwork? This action cannot be undone.</p>
    </div>

    <div class="artwork-preview">
        <img src="@Model.MediaUrl" alt="@Model.Title" class="preview-image">
        <div class="preview-details">
            <h3 class="preview-title">@Model.Title</h3>
            <span class="preview-type">@Model.Type</span>
            <p class="preview-description">@Model.Description</p>
            <p class="preview-date">Uploaded: @Model.UploadedAt.ToString("MMMM dd, yyyy")</p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PortfolioItemId" />
        <div class="form-actions">
            <button type="submit" class="btn-delete">
                <i class="fas fa-trash"></i> Confirm Delete
            </button>
        </div>
    </form>
</div>
}
<style>
    .delete-warning {
        background: rgba(220, 53, 69, 0.1);
        border-radius: var(--border-radius);
        padding: 20px;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .delete-warning i {
        color: #dc3545;
        font-size: 24px;
    }

    .delete-warning p {
        color: var(--text-primary-dark);
        margin: 0;
        font-size: 1rem;
    }

    .artwork-preview {
        background: var(--input-background-dark);
        border-radius: var(--border-radius);
        overflow: hidden;
        margin-bottom: 30px;
    }

    .preview-image {
        width: 100%;
        height: 300px;
        object-fit: cover;
    }

    .preview-details {
        padding: 20px;
    }

    .preview-title {
        color: var(--text-primary-dark);
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

    .preview-type {
        display: inline-block;
        background: linear-gradient(90deg, var(--primary-dark), var(--secondary-dark));
        color: var(--text-primary-dark);
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.9rem;
        margin-bottom: 15px;
    }

    .preview-description {
        color: var(--text-secondary-dark);
        margin-bottom: 15px;
        font-size: 1rem;
        line-height: 1.6;
    }

    .preview-date {
        color: var(--text-secondary-dark);
        font-size: 0.9rem;
        margin: 0;
    }

    .form-actions {
        display: flex;
        justify-content: flex-end;
    }

    .btn-delete {
        background: #dc3545;
        color: var(--text-primary-dark);
        border: none;
        padding: 12px 24px;
        border-radius: var(--border-radius);
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

    .btn-delete:hover {
        background: #bb2d3b;
        transform: translateY(-2px);
    }
</style>
